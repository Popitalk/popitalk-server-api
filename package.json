{
  "name": "playnows-server",
  "version": "1.0.0",
  "description": "Playnows API/WS Server",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development node ./src/index.js",
    "devserver": "cross-env NODE_ENV=development nodemon ./src/index.js",
    "production": "cross-env NODE_ENV=production node ./src/index.js",
    "prettier": "prettier \"./src/**/*.+(js|json|yml|yaml|ts|tsx|md|mdx|graphql)\"",
    "unprettified": "npm run prettier -- --list-different",
    "format": "npm run prettier -- --write",
    "lint": "eslint ./src/ -c ./.eslintrc --ext js",
    "fix": "eslint ./src/ --fix",
    "validate": "run-p lint unprettified",
    "test": "cross-env NODE_ENV=testing jest --runInBand --detectOpenHandles",
    "test-watch": "cross-env NODE_ENV=testing jest --watch --runInBand",
    "test-watchall": "cross-env NODE_ENV=testing jest --watchAll --runInBand",
    "coverage": "cross-env NODE_ENV=testing jest --coverage",
    "db-migrate": "",
    "migrate-create": "node ./tools/migrate.js create",
    "migrate-list": "node ./tools/migrate.js list",
    "migrate-up": "db-migrate up",
    "migrate-down": "db-migrate down",
    "mr": "db-migrate reset",
    "migrate-reset": "run-s mr migrate-up",
    "db-create": "node ./tools/createDb.js",
    "db-drop": "node ./tools/dropDb.js",
    "db-seed": "node ./tools/seedDb.js",
    "redis-flush": "redis-cli --scan --pattern 'playnows*' | xargs redis-cli unlink",
    "db-reset": "run-s migrate-reset redis-flush db-seed"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "roots": [
      "<rootDir>/__tests__"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js}": [
      "npm run format",
      "npm run fix",
      "cross-env NODE_ENV=testing jest --runInBand --findRelatedTests",
      "git add"
    ]
  },
  "dependencies": {
    "@hapi/basic": "^6.0.0",
    "@hapi/boom": "^9.1.0",
    "@hapi/catbox": "^11.1.0",
    "@hapi/catbox-redis": "^5.0.5",
    "@hapi/crumb": "^8.0.0",
    "@hapi/glue": "^7.0.0",
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.0.0",
    "@hapi/yar": "^10.1.0",
    "@sentry/node": "^5.20.1",
    "aws-sdk": "^2.643.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.5",
    "bufferutil": "^4.0.1",
    "bull": "^3.13.0",
    "chalk": "^4.0.0",
    "date-fns": "^2.11.0",
    "db-migrate": "^0.11.8",
    "db-migrate-pg": "^1.1.0",
    "dotenv": "^8.1.0",
    "faker": "^4.1.0",
    "fast-redact": "^2.0.0",
    "figlet": "^1.3.0",
    "file-type": "^12.4.0",
    "google-auth-library": "^6.0.2",
    "googleapis": "^52.1.0",
    "hapi-swagger": "^13.0.0",
    "ioredis": "^4.16.0",
    "jest": "^25.1.0",
    "knex": "^0.20.12",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "nodemailer": "^6.4.6",
    "pg-promise": "^10.4.4",
    "promise.allsettled": "^1.0.2",
    "utf-8-validate": "^5.0.2",
    "uuid": "^3.4.0",
    "youtube-duration": "^1.0.0"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^19.0.2",
    "@types/hapi__inert": "^5.2.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/hapi__vision": "^5.5.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.9.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.1.0",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
